<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <!-- Font Awesome -->
<link
href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css"
rel="stylesheet"
/>
<!-- Google Fonts -->
<link
href="https://fonts.googleapis.com/css?family=Roboto:300,400,500,700&display=swap"
rel="stylesheet"
/>
<!-- MDB -->
<link
href="https://cdnjs.cloudflare.com/ajax/libs/mdb-ui-kit/5.0.0/mdb.min.css"
rel="stylesheet"
/>
    <title>Document</title>
</head>
<body>
    <section class="vh-100" style="background-color: #2779e2;">
        <div class="container h-100">
          <div class="row d-flex justify-content-center align-items-center h-100">
            <div class="col-xl-9">
      
              <h1 class="text-white mb-4">Modifier les infos du professionnel</h1>
              <% doctor.forEach(function(patient){ %>
                <form action="/doctor/updatedoctor" method="post">
                  <div class="card" style="border-radius: 15px;">
                    <div class="card-body">
          
                      <div class="row align-items-center pt-4 pb-3">
                        <div class="col-md-3 ps-5">
          
                          <h6 class="mb-0">Nom</h6>
          
                        </div>
                        <div class="col-md-9 pe-5">
          
                          <input type="text"  name="nom" class="form-control form-control-lg"  value="<%=patient.nom %>"/>
          
                        </div>
                      </div>
                      <div class="row align-items-center pt-4 pb-3">
                        <div class="col-md-3 ps-5">
          
                          <h6 class="mb-0">Prenom</h6>
          
                        </div>
                        <div class="col-md-9 pe-5">
          
                          <input type="text" name="prenom" class="form-control form-control-lg" value="<%=patient.prenom %>"/>
          
                        </div>
                      </div>
          
                      <hr class="mx-n3">
          
                      <div class="row align-items-center py-3">
                        <div class="col-md-3 ps-5">
          
                          <h6 class="mb-0"> Addresse Email</h6>
          
                        </div>
                        <div class="col-md-9 pe-5">
          
                          <input type="email" name="email" class="form-control form-control-lg" placeholder="example@example.com" value="<%=patient.email %>" />
          
                        </div>
                      </div>
                      <div class="row align-items-center py-3">
                        <div class="col-md-3 ps-5">
          
                          <h6 class="mb-0"> Numero</h6>
          
                        </div>
                        <div class="col-md-9 pe-5">
          
                          <input type="text" name="numero" class="form-control form-control-lg"  value="<%=patient.numero %>"/>
          
                        </div>
                      </div>
          
                      <hr class="mx-n3">
          
                      <div class="row align-items-center py-3">
                        <div class="col-md-3 ps-5">
          
                          <h6 class="mb-0">Specialit√©</h6>
          
                        </div>
                        <div class="col-md-9 pe-5">
          
                          <input type="text" name="specialite" class="form-control form-control-lg"  value="<%=patient.specialite %>"/>
          
                        </div>
                      </div>
                      
                      <div class="row align-items-center py-3">
                        <div class="col-md-3 ps-5">
          
                          <h6 class="mb-0">centre</h6>
          
                        </div>
                        <div class="col-md-9 pe-5">
          
                          <input type="text" name="centre" class="form-control form-control-lg"  value="<%=patient.centre%>"/>
          
                        </div>
                      </div>
                    </div>
                      <input type="hidden" name="id" value="<%=patient.id%>">
          
                   
          
                      <hr class="mx-n3">
          
                      <div class="px-5 py-4">
                        <button  class="btn btn-primary btn-lg">Valider</button>
                      </div>
          
                    </div>
                  </div>
                </form>
                <% }); %>
               
               
          
      
            </div>
          </div>
        </div>
      </section>


      <script
  type="text/javascript"
  src="https://cdnjs.cloudflare.com/ajax/libs/mdb-ui-kit/5.0.0/mdb.min.js"
></script>
</body>
</html>